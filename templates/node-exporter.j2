server {
    listen 80 default_server;
    listen [::]:80 default_server;
    server_name _;
    # server_name {{ ansible_hostname }}.{{ ansible_domain }};

{% for host in nginx_reverse_node_exporter_hosts | sort %}
    # entry for {{ host.name }}
    location /{{ host.ip }}/ {
        proxy_pass           {{ host.url }};
    }
{% endfor %}
}
